{% extends 'master' %}
{% block content %}
<div class="post">
<h2>{{ category.name }} </h2>
<hr style="border-bottom:1px solid #c8c8c8;">
<div class="row">
   {% for movie in movies %} 
   <div class="col-sm-6 col-md-4">
      <div class="thumbnail" >
         <img class="responsive-img img-thumbnail" style="width:250px;height:250px;" src="{{movie.image}}" >
         <div class="caption">
            <h3> {{ movie.title | truncate(23) }}</h3>
            {% if currentUser %}  
            <p><a href="/movie/{{ movie.id }}" class="btn btn-default btn-lg" role="button">Részletek</a></p>
            {% endif %}
         </div> <!--div class caption-->
         </div> <!--div class thumbnail-->
      </div> <!--div class col-->
      {% else %}
      <h3>Ebben a kategóriában jelenleg nincs még film felvéve </h3>
      {% endfor %}
   </div> <!--div class row-->    
</div> <!--div class post-->
{% endblock %}