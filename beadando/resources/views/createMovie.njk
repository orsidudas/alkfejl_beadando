{% extends 'master' %}

{% block content %}
{% if old('errors') %}
<div class="alert alert-danger">
    {% for error in old('errors') %}
    <li> {{ error.message }} </li>
    {% endfor %}
</div>
{% endif %}
  {{ form.open({action: 'MovieController.store'}) }}

    {{ csrfField }}

    <fieldset class="form-group">
      {{ form.label('Cím') }}
      {{ form.text('title', null, { class: 'form-control' }) }}
    </fieldset>

    <fieldset class="form-group">
      {{ form.label('Rendező') }}
      {{ form.text('director', null, { class: 'form-control' }) }}
    </fieldset>

    <fieldset class="form-group">
      {{ form.label('Leírás') }}
      {{ form.textarea('content', null, { class: 'form-control' }) }}
    </fieldset>

    <fieldset class="form-group">
      {{ form.label('Kép') }}
      {{ form.text('image', null, { class: 'form-control' }) }}
    </fieldset>

    <fieldset class="form-group">
    <label for="category_id" class="col-lg-2 control-label">Kategória</label>
      <select class="form-control" id="category_id" name="category_id">
        {% for category in categories %}
        <option value="{{ category.id }}"
          {% if category.id == old('category_id') %}
          selected
          {% endif %}
        >{{ category.name }}</option>
        {% endfor %}
      </select>
    </fieldset>

    {{ form.submit('Publish', 'publish', { class: 'btn btn-primary btn-block' }) }}

  {{ form.close() }}
{% endblock %}