{% extends 'master' %}

{% block content %}
<form class="form-horizontal">
  <fieldset>
  <div class="post">
    <div>
      <a href="/">  Go Back </a>
    </div>
    <hr>
    <h2>{{ movie.title }}</h2>
    <p> Műfaj: {{ movie.category.name }}</p>
    <p>Rendező: {{ movie.director }}</p>
    <h5> Leírás </h5>
    <p>{{ movie.content }}</p>
  </div>
   <div class="form-group">
   <label for="rating" class="col-lg-2 control-label">Értékelés</label>
      <div class="col-lg-10">
        <select class="form-control" id="rating">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
          <option>6</option>
          <option>7</option>
          <option>8</option>
          <option>9</option>
          <option>10</option>
        </select>
    </div>
  </div>

  <div class="btn-group btn-group-justified">
  <a href="/movie/{{movie.id}}/rating" class="btn btn-default">Értékelem</a>
  <a href="/movie/{{movie.id}}/edit" class="btn btn-default">Szerkesztés</a>
  <a href="/movie/{{movie.id}}/delete" class="btn btn-default">Törlés</a>
</div>


   </fieldset>
</form>
{% endblock %}