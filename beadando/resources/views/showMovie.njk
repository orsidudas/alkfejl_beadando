{% extends 'master' %}

{% block content %}
<form class="form-horizontal" method="post">

{{ csrfField }}


  <fieldset>
  <div class="post">
    <div>
      <a href="/">  Go Back </a>
    </div>
    <hr>
    <h2>{{ movie.title }}</h2>
    <p> Műfaj: {{ movie.category.name }}</p>
    <p>Rendező: {{ movie.director }}</p>
    <h5> Leírás </h5>
    <p>{{ movie.content }}</p>

    <label for="rating" class="col-lg-2 control-label">Értékelés</label>
      <select class="form-control" id="rating" name="rating">
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
          <option>6</option>
          <option>7</option>
          <option>8</option>
          <option>9</option>
          <option>10</option>
      </select>

  <div class="btn-group btn-group-justified">
  <button type="submit" class="btn btn-primary">Értékelés</button>
  <a href="/movie/{{movie.id}}/edit" class="btn btn-default">Szerkesztés</a>
  <a href="/movie/{{movie.id}}/delete" class="btn btn-default">Törlés</a>
</div>


   </fieldset>
</form>
{% endblock %}