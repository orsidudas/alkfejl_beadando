{% extends 'master' %}
{% block content %}
<div>
   {% if currentUser %}  
   <a href="movie/create" class="btn btn-default btn-block btn-lg"> Új film hozzáadása </a>
   <hr style="border-bottom:1px solid #e8e8e8;">
   {% endif %}
</div>
<div class="row">
   {% for movie in movies %} 
   <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
         <img class="responsive-img img-thumbnail" style="width:250px;height:250px;" src="{{movie.image}}" >
         <div class="caption">
            <h3> {{ movie.title | truncate(23) }}</h3>
            {% if currentUser %}  
            <p><a href="movie/{{ movie.id }}" class="btn btn-default btn-lg" role="button">Részletek</a></p>
            {% endif %}
         </div>
      </div>
   </div>
   {% endfor %}
</div>
{% endblock %}