{% extends "master" %}
{% block content %}
{% if old('errors') %}
<div class="panel panel-danger">
   <div class="panel-heading">
      <h3 class="panel-title">Hibák</h3>
   </div>
   <div class="panel-body">
      <ul>
         {% for error in old('errors') %}
         <li>{{ error.message }}</li>
         {% endfor %}
      </ul>
   </div>
</div>
{% endif %}
<form class="form-horizontal" method="post">
   {{ csrfField }}
   <div class="form-group">
      <h2>Regisztráció</h2>
      <hr style="border-bottom:1px solid #c8c8c8;">
      <label for="username" class="col-lg-2 control-label">Felhasználónév</label>
      <div class="col-lg-10">
         <input type="text" class="form-control input-lg" id="username" name="username" placeholder="Felhasználónév" value="{{old('username')}}">
      </div>
   </div>
   <div class="form-group">
      <label for="email" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
         <input type="text" class="form-control input-lg" id="email" name="email" placeholder="Email" value="{{old('email')}}">
      </div>
   </div>
   <div class="form-group">
      <label for="password" class="col-lg-2 control-label">Jelszó</label>
      <div class="col-lg-10">
         <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Jelszó" value="">
      </div>
   </div>
   <div class="form-group">
      <label for="password_confirm" class="col-lg-2 control-label">Jelszó</label>
      <div class="col-lg-10">
         <input type="password" class="form-control input-lg" id="password_confirm" name="password_confirm" placeholder="Jelszó" value="">
      </div>
   </div>
   <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
         <button type="submit" class="btn btn-default btn-lg">Regisztrálok!</button>
      </div>
   </div>
</form>
{% endblock %}